%tr
  %td= link_to(expiry_date.product.name, expiry_date, remote: true)
  %td= expiry_date.part_number
  %td= expiry_date.count
  /%td= expiry_date.date_added.to_formatted_s(:long) 
  %td= expiry_date.date_expiry.to_formatted_s(:long)
  %td= expiry_date.time_expiry.to_s + "days"
  %td
    =link_to(image_tag('edit.png'), edit_expiry_date_path(expiry_date), remote: true, title: 'Edit expiry date')
    |
    =link_to(image_tag('delete.png'), expiry_date, :method => :delete, :data => { :confirm => 'Are you sure?' }, remote: true, class: "destroy", title: 'Delete record!')