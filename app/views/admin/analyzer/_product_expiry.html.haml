%tr{class: "#{product_expiry.check_status}"}
  %td
    = product_expiry.part_number
  %td
    = product_expiry.count
  %td
    = product_expiry.date_added.strftime("%Y-%d-%m")
  %td 
    = product_expiry.date_expiry.strftime("%Y-%d-%m")
  %td
    = product_expiry.time_expiry.to_s + "days"
  %td
    = link_to 'decrese count', expiry_dates_product_decrese_count_path(id: product_expiry.id), remote: true
    = link_to(image_tag('stock-tool-iscissors-22.png'), admin_products_product_set_discount_path(id: product_expiry.product_id), title: "Set discount!", class: "action", remote: true)
    = link_to(image_tag('dialogs-icon-delete.png'), expiry_date_path(product_expiry), remote: true, title: 'Delete product from expiry allerts!', method: :delete)
/image_tag('stock-tool-iscissors-22.png')