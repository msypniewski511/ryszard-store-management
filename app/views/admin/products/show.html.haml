%h3= @admin_product.name
%table.show
  %tr
    %th Name
    %th Description
    %th Company
    %th Category
    %th Subcategory
    %th Image url
    %th Price
  %tr
    %td= @admin_product.name
    %td= @admin_product.description
    %td= @admin_product.company.name
    %td= @admin_product.category.name
    %td= @admin_product.subcategory.name
    %td= @admin_product.image_url
    %td= @admin_product.price
  %tr
    %td
      = link_to 'Back', admin_products_path, remote: true |
      = link_to 'Edit', edit_admin_product_path(@admin_product), remote: true
    %td{colspan: 6}
