= form_for(@admin_product,  remote: true) do |f|
  - if @admin_product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_product.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @admin_product.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :company
    = f.collection_select(:company_id, Admin::Company.all, :id, :name)
  .field
    = f.label :category
    = f.collection_select(:category_id, Admin::Category.all, :id, :name)
  .field
    = f.label :subcategory
    = f.collection_select(:subcategory_id, Admin::SubCategory.all, :id, :name)
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :image_url
    = f.text_field :image_url
    /= f.number_field :category_id
  .action
    = f.submit