%h3 Listing subcategories
%table
  %thead
    %tr
      %th Name
      %th Description
      %th Category
      %th{ colspan: 3 } Action

  %tbody.index
    = render partial: 'subcategory', collection: @categories
    %tr
      %td
        = link_to(image_tag('add_over.png'), new_admin_subcategory_url, remote: true, title: 'Add subcategory')
        = link_to 'New Subcategory', new_admin_subcategory_url, remote: true
      %td{colspan: 5}