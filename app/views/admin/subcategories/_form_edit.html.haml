= form_for(@admin_category, remote: true, url: admin_subcategory_path) do |f|
  - if @admin_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @admin_category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :category_id
    = f.collection_select(:category_id, Admin::Category.all, :id, :name)
    /= f.number_field :category_id
  .action
    = f.submit