%h3 Categories
%table
  %thead
    %tr
      %th Name
      %th Description
      %th{ colspan: 3 } Action

  %tbody.index
    = render partial: 'category', collection: @categories

    %tr
      %td
        = link_to(image_tag('add_over.png'), new_admin_category_url, remote: true, title: 'Add new category')
        = link_to 'New Category', new_admin_category_url, remote: true
      %td{colspan: 4}