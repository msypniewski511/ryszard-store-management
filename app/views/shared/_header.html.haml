/ Beginig of site header
%header#site_header
  / Site navigation panel
  %nav
  %h2 Pragmatic Sport Store
  %ul.nav
    %li
      = link_to "Catalog", catalog_index_path
    - if logged_in?
      %li
        = link_to "Adminstration", admin_index_path
      %li
        = link_to "Callendar", calendar_index_path
      %li
        = link_to "Users", users_path
      %li.log
        = link_to "Logout", logout_path, method: 'delete'
      %li.log
        = link_to "Settings", edit_user_path(current_user)
    - else
      %li.log
        = link_to "Login", login_path
      %li.log
        = link_to "sign in", signup_path